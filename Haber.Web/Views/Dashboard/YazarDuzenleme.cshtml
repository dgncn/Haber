@model Yazar
@using Haber.COM;
@{
    ViewBag.Title = "Yazar Düzenleme";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<h2>Yazar Düzenleme Sayfası</h2>
@Html.ValidationSummary()
@using (Html.BeginForm())
{

    @Html.AntiForgeryToken()
    <table>
        <thead>
            <tr>
                <td></td>
                <td></td>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    @Html.LabelFor(x => x.YazarAdSoyad)
                    <input type="hidden" name="yazarID" value="@Model.YazarID" />
                </td>
                <td>
                    @Html.TextBoxFor(x => x.YazarAdSoyad)
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <input type="submit" name="btnYazarDuzenle" value="Kaydet" />
                </td>
            </tr>
        </tbody>
    </table>

}