@model HaberUser
@using Haber.COM;
    @{
        ViewBag.Title = "Kullanıcı Rol Sil";
        Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
    }

    <h2>Kullanıcı Rol Sil</h2>
    @using (Html.BeginForm("KullaniciRolSil", "Dashboard", FormMethod.Post))
    {
        <table class="table table-bordered table-condensed table-hover table-responsive table-striped">
            <tr>
                <td>Rol Listesi</td>
                <td>Sil</td>

            </tr>

            <input type="hidden" name="userID" value="@Model.Id" />

            @foreach (var rol in (List<string>)ViewBag.roles)
            {
                var roleId = UserInfo.rolBilgisiAl(rol);
                <tr>
                    <td>@rol</td>
                    @*<td><a class="btn btn-default" href="~/Dashboard/KullaniciRolSil/@roleId">Sil</a></td>*@
                    <td><input type="submit" class="btn btn-default" name="rID" value="@roleId" /></td>
                </tr>


            }
        </table>
    }