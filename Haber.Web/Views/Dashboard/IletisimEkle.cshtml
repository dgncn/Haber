@model Iletisim
@using Haber.COM;
    @{
        ViewBag.Title = "İletişim Ekle";
        Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
    }

    <h2>İletişim Ekle</h2>

<script src="~/Content/ckeditor/ckeditor/ckeditor.js"></script>

    @using (Html.BeginForm("IletisimEkle", "Dashboard", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <table>
            <thead>
                <tr>

                    <td>@Html.LabelFor(x => x.IltAdSoyad)</td>
                    <td>@Html.TextBoxFor(x => x.IltAdSoyad)</td>
                </tr>
                <tr>

                    <td>@Html.LabelFor(x => x.email)</td>
                    <td>@Html.TextBoxFor(x => x.email)</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(x => x.IltIcerik)</td>
                    <td>
                        @Html.TextAreaFor(x => x.IltIcerik)
                    <script>
                        CKEDITOR.replace('IltIcerik', { htmlEncodeOutput: true });
                    </script>
                    </td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(x => x.IltKonu)</td>
                    <td>@Html.TextBoxFor(x => x.IltKonu)</td>
                </tr>
                <tr>
                    <td></td>
                    <td><input type="submit" name="btnHakEkle" value="Kaydet" /></td>
                </tr>
            </thead>
        </table>
    }